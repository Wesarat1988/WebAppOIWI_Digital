    private async Task OnDocumentTypeChanged(string? value)
    {
        var normalized = NormalizeDocumentTypeOrDefault(value);
        ApplySelectedDocumentType(normalized);
        await UpdateDocumentNumberPreviewAsync();
        await InvokeAsync(StateHasChanged);
