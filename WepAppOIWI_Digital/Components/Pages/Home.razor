    private async Task LoadDocumentsAsync()
    {
        try
        {
            var result = await DocumentCatalog.GetDocumentsAsync();
            documents.Clear();
            documents.AddRange(result);
            catalogContext = DocumentCatalog.GetCatalogContext();
            UpdateCatalogStatus(catalogContext);
