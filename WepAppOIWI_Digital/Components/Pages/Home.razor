    private string? BuildViewerUrl(DocumentRecord document)
    {
        if (string.IsNullOrWhiteSpace(document.FileName))
        {
            return null;
        }

        try
        {
            var token = DocumentCatalogService.EncodeDocumentToken(document.FileName);
            return $"/documents/viewer/{Uri.EscapeDataString(token)}";
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Failed to build viewer link for document '{DocumentName}'.", document.FileName);
            return document.LinkUrl;
        }
    }

    private IReadOnlyList<DocumentRecord> GetFilteredDocuments()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            return documents;
        }

        var keyword = searchTerm.Trim();

        if (keyword.Length == 0)
        {
            return documents;
        }

        return documents
            .Where(document => MatchesKeyword(document, keyword))
            .ToList();
    }

    private static bool MatchesKeyword(DocumentRecord document, string keyword)
        => ContainsKeyword(document.DisplayName, keyword)
            || ContainsKeyword(document.Line, keyword)
            || ContainsKeyword(document.Station, keyword)
            || ContainsKeyword(document.Model, keyword)
            || ContainsKeyword(document.UploadedBy, keyword)
            || ContainsKeyword(document.Comment, keyword);

    private static bool ContainsKeyword(string? source, string keyword)
        => !string.IsNullOrWhiteSpace(source)
            && source.IndexOf(keyword, StringComparison.OrdinalIgnoreCase) >= 0;

