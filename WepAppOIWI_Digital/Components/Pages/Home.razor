        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load OI/WI documents from the server file system.");
            errorMessage = "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡πÄ‡∏≠‡∏Å‡∏™‡∏≤‡∏£‡πÑ‡∏î‡πâ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á";
        }
        finally
        {
            isLoading = false;
        }
    }

    private static string DisplayOrDash(string? value)
        => string.IsNullOrWhiteSpace(value) || value == "-"
            ? "-"
            : value;

    private static string FormatTimestamp(DateTimeOffset? timestamp)
        => timestamp.HasValue
            ? timestamp.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")
            : "-";

    private string? BuildViewerUrl(DocumentRecord document)
    {
        if (string.IsNullOrWhiteSpace(document.FileName))
        {
            return null;
        }

        try
        {
            var token = DocumentCatalogService.EncodeDocumentToken(document.FileName);
            return $"/documents/viewer/{Uri.EscapeDataString(token)}";
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Failed to build viewer link for document '{DocumentName}'.", document.FileName);
            return document.LinkUrl;
        }
    }

    private string? BuildEditUrl(DocumentRecord document)
    {
        if (string.IsNullOrWhiteSpace(document.FileName))
        {
            return null;
        }

        try
        {
            var token = DocumentCatalogService.EncodeDocumentToken(document.FileName);
            return $"/documents/edit/{Uri.EscapeDataString(token)}";
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Failed to build edit link for document '{DocumentName}'.", document.FileName);
            return null;
        }
    }

    private IReadOnlyList<DocumentRecord> GetFilteredDocuments()
    {
        IEnumerable<DocumentRecord> query = documents;

        if (!string.IsNullOrWhiteSpace(selectedDocumentType))
        {
            query = query.Where(document => string.Equals(
                NormalizeValue(document.DocumentType),
                selectedDocumentType,
                StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrWhiteSpace(selectedLine))
        {
            query = query.Where(document => string.Equals(NormalizeValue(document.Line), selectedLine, StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrWhiteSpace(selectedStation))
        {
            query = query.Where(document => string.Equals(NormalizeValue(document.Station), selectedStation, StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrWhiteSpace(selectedModel))
        {
            query = query.Where(document => string.Equals(NormalizeValue(document.Model), selectedModel, StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrWhiteSpace(selectedUploader))
        {
            query = query.Where(document => string.Equals(NormalizeValue(document.UploadedBy), selectedUploader, StringComparison.OrdinalIgnoreCase));
        }

        var keyword = searchTerm.Trim();

        if (!string.IsNullOrWhiteSpace(keyword))
        {
            query = query.Where(document => MatchesKeyword(document, keyword));
        }

        return query.ToList();
    }

    private static bool MatchesKeyword(DocumentRecord document, string keyword)
        => ContainsKeyword(document.DisplayName, keyword)
            || ContainsKeyword(document.Line, keyword)
            || ContainsKeyword(document.Station, keyword)
            || ContainsKeyword(document.Model, keyword)
            || ContainsKeyword(document.Machine, keyword)
            || ContainsKeyword(document.UploadedBy, keyword)
            || ContainsKeyword(document.Comment, keyword)
            || ContainsKeyword(document.DocumentType, keyword)
            || ContainsKeyword(document.DocumentCode, keyword);

    private static bool ContainsKeyword(string? source, string keyword)
        => !string.IsNullOrWhiteSpace(source)
            && source.IndexOf(keyword, StringComparison.OrdinalIgnoreCase) >= 0;

    private void ClearAllFilters()
    {
        searchTerm = string.Empty;
        selectedDocumentType = string.Empty;
        selectedLine = string.Empty;
        selectedStation = string.Empty;
        selectedModel = string.Empty;
        selectedUploader = string.Empty;
    }

    private bool IsClearDisabled()
        => string.IsNullOrWhiteSpace(searchTerm)
            && string.IsNullOrWhiteSpace(selectedDocumentType)
            && string.IsNullOrWhiteSpace(selectedLine)
            && string.IsNullOrWhiteSpace(selectedStation)
            && string.IsNullOrWhiteSpace(selectedModel)
            && string.IsNullOrWhiteSpace(selectedUploader);

    private IEnumerable<string> GetAvailableLines()
        => GetDistinctValues(document => document.Line);

    private IEnumerable<string> GetAvailableStations()
        => GetDistinctValues(document => document.Station);

    private IEnumerable<string> GetAvailableModels()
        => GetDistinctValues(document => document.Model);

    private IEnumerable<string> GetAvailableUploaders()
        => GetDistinctValues(document => document.UploadedBy);

    private IEnumerable<string> GetAvailableDocumentTypes()
        => GetDistinctValues(document => document.DocumentType);

    private IEnumerable<string> GetDistinctValues(Func<DocumentRecord, string?> selector)
        => documents
            .Select(selector)
            .Select(NormalizeValue)
            .Where(value => !string.IsNullOrWhiteSpace(value))
            .Distinct(StringComparer.OrdinalIgnoreCase)
            .OrderBy(value => value, StringComparer.CurrentCultureIgnoreCase);

    private static string? NormalizeValue(string? value)
    {
        if (string.IsNullOrWhiteSpace(value) || value == "-")
        {
            return null;
        }

        return value.Trim();
    }

