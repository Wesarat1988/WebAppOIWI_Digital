@inherits LayoutComponentBase

<div class="@PageCssClass">
    <div class="sidebar-overlay" @onclick="CloseSidebar" aria-hidden="true"></div>

    <div class="sidebar" aria-hidden="@(!_isSidebarOpen)">
        <NavMenu OnRequestClose="CloseSidebar" />
    </div>

    <main>
        <div class="top-row px-4">
            <button type="button"
                    class="sidebar-toggle @(_isSidebarOpen ? "" : "collapsed")"
                    @onclick="ToggleSidebar"
                    aria-label="Toggle sidebar"
                    aria-expanded="@_isSidebarOpen"
                    aria-controls="primary-navigation">
                <span class="sidebar-toggle-icon"></span>
            </button>
            <span class="layout-title">WepAppOIWI_Digital</span>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>

@code {
    private bool _isSidebarOpen = true;
    private bool _hasInteracted;

    private string PageCssClass
    {
        get
        {
            var classes = new List<string> { "page" };
            classes.Add(_isSidebarOpen ? "sidebar-open" : "sidebar-closed");

            if (_hasInteracted)
            {
                classes.Add("sidebar-has-interaction");
            }

            return string.Join(" ", classes);
        }
    }

    private void ToggleSidebar()
    {
        _isSidebarOpen = !_isSidebarOpen;
        _hasInteracted = true;
    }

    private void CloseSidebar()
    {
        if (_isSidebarOpen)
        {
            _isSidebarOpen = false;
            _hasInteracted = true;
        }
    }
}
