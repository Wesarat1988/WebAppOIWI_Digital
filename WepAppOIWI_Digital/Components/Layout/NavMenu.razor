<div class="@NavMenuCssClass">
    <div class="top-row ps-3 navbar navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="">
                <span class="brand-badge" aria-hidden="true">W</span>
                <span class="brand-text">WepAppOIWI_Digital</span>
            </a>
        </div>
    </div>

    <input type="checkbox" title="Navigation menu" class="navbar-toggler" />

    <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
        <nav class="flex-column" aria-label="Primary navigation">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>
                    <span class="nav-link-text">Home</span>
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="counter">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span>
                    <span class="nav-link-text">Counter</span>
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="weather">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>
                    <span class="nav-link-text">Weather</span>
                </NavLink>
            </div>
        </nav>
    </div>
</div>

@code {
    [Parameter]
    public bool IsCollapsed { get; set; }

    private string NavMenuCssClass => IsCollapsed ? "nav-menu collapsed" : "nav-menu";
}
